{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "weidu",
  "rules": {
    "program": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "comment"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "block_comment"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "REPEAT",
              "content": {
                "type": "SYMBOL",
                "name": "statement"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "start",
          "content": {
            "type": "STRING",
            "value": "//"
          }
        },
        {
          "type": "FIELD",
          "name": "content",
          "content": {
            "type": "ALIAS",
            "content": {
              "type": "PATTERN",
              "value": "[^\\r\\n]*"
            },
            "named": true,
            "value": "comment_content"
          }
        },
        {
          "type": "PATTERN",
          "value": "\\n|\\r\\n"
        }
      ]
    },
    "block_comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "start",
          "content": {
            "type": "STRING",
            "value": "/*"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "PATTERN",
              "value": "\\n|\\r\\n"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "FIELD",
              "name": "block_content",
              "content": {
                "type": "SYMBOL",
                "name": "block_comment_text"
              }
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "FIELD",
          "name": "end",
          "content": {
            "type": "STRING",
            "value": "*/"
          }
        },
        {
          "type": "PATTERN",
          "value": "\\n|\\r\\n"
        }
      ]
    },
    "block_comment_text": {
      "type": "PATTERN",
      "value": "[^*]+|\\*[^\\/]"
    },
    "statement": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "string"
        },
        {
          "type": "SYMBOL",
          "name": "reference_string"
        },
        {
          "type": "SYMBOL",
          "name": "conditional"
        }
      ]
    },
    "string": {
      "type": "PATTERN",
      "value": "@[0-9]+\\s*=\\s*~.*~"
    },
    "reference_string": {
      "type": "PATTERN",
      "value": "%.*%"
    },
    "conditional": {
      "type": "PATTERN",
      "value": "(IF|THEN|RESPONSE|END)"
    }
  },
  "extras": [
    {
      "type": "SYMBOL",
      "name": "comment"
    },
    {
      "type": "SYMBOL",
      "name": "block_comment"
    },
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
